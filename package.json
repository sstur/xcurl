{
  "name": "xcurl",
  "version": "1.3.0",
  "description": "A curl clone in Node",
  "bin": {
    "curl": "./bin/xcurl",
    "xcurl": "./bin/xcurl"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --outDir lib/",
    "clean": "rm -rf coverage lib",
    "link": "yarn run unlink && ln -s ../../bin/xcurl node_modules/.bin/xcurl",
    "unlink": "rm -f node_modules/.bin/xcurl",
    "typecheck": "tsc --noEmit -p .",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint": "eslint --max-warnings 0 \"src/**/*.{ts,tsx}\"",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "dependencies": {},
  "devDependencies": {
    "@sstur/clargs": "^1.4.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "eslint": "7.x.x",
    "eslint-config-eslift": "^1.4.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": "eslift",
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "ignoreRestSiblings": true,
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "homepage": "https://github.com/sstur/xcurl",
  "repository": "github:sstur/xcurl",
  "keywords": [
    "curl",
    "cli"
  ],
  "license": "ISC"
}
