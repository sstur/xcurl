{
  "name": "xcurl",
  "version": "1.8.3",
  "description": "A curl clone in Node",
  "bin": {
    "curl": "./bin/xcurl",
    "xcurl": "./bin/xcurl"
  },
  "files": [
    "bin",
    "index.js"
  ],
  "scripts": {
    "link": "yarn run unlink && ln -s ../../bin/xcurl node_modules/.bin/xcurl",
    "unlink": "rm -f node_modules/.bin/xcurl",
    "lint": "eslint --max-warnings 0 .",
    "typecheck": "tsc --noEmit -p .",
    "unit": "CI=1 vitest --globals --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "yarn lint && yarn typecheck && yarn unit && yarn format:check",
    "clean": "rm -rf build coverage",
    "copy-files": "cp README.md build/ && cp -R bin build/ && lean-package > build/package.json",
    "build": "yarn clean && rollup -c && yarn copy-files && prettier --write build",
    "prepublishOnly": "echo '!! Please use ./publish.sh instead !!' && exit 1"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@sstur/clargs": "^1.4.0",
    "@types/node": "^18.19.33",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-xt": "^1.8.0",
    "lean-package": "^1.2.0",
    "prettier": "^3.2.5",
    "rollup": "^2.77.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "typescript": "~5.1.6",
    "vitest": "^1.6.0"
  },
  "eslintConfig": {
    "extends": "xt",
    "ignorePatterns": [
      "/build",
      "/coverage"
    ],
    "rules": {
      "prefer-const": "warn",
      "@typescript-eslint/consistent-type-imports": "warn"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "homepage": "https://github.com/sstur/xcurl",
  "repository": "github:sstur/xcurl",
  "keywords": [
    "curl",
    "cli"
  ],
  "license": "ISC"
}
