{
  "name": "xcurl",
  "version": "1.8.2",
  "description": "A curl clone in Node",
  "bin": {
    "curl": "./bin/xcurl",
    "xcurl": "./bin/xcurl"
  },
  "files": [
    "bin",
    "index.js"
  ],
  "scripts": {
    "link": "yarn run unlink && ln -s ../../bin/xcurl node_modules/.bin/xcurl",
    "unlink": "rm -f node_modules/.bin/xcurl",
    "lint": "eslint --max-warnings 0 \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit -p .",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest",
    "clean": "rm -rf build coverage",
    "copy-files": "cp README.md build/ && cp -R bin build/ && lean-package > build/package.json",
    "build": "yarn clean && rollup -c && yarn copy-files && prettier --write build",
    "prepublishOnly": "echo '!! Please use ./publish.sh instead !!' && exit 1"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@sstur/clargs": "^1.4.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "eslint": "^8.20.0",
    "eslint-config-xt": "^1.7.0",
    "jest": "^28.1.3",
    "lean-package": "^1.2.0",
    "prettier": "^2.7.1",
    "rollup": "^2.77.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": "xt",
    "ignorePatterns": [
      "/build"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-imports": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "homepage": "https://github.com/sstur/xcurl",
  "repository": "github:sstur/xcurl",
  "keywords": [
    "curl",
    "cli"
  ],
  "license": "ISC"
}
